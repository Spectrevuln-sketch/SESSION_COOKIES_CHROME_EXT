{
  "compilerOptions": {
    "jsx": "react",
    "module": "es6",
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "paths": {
      "@configs/*": ["./src/configs/*"],
      "@utils/*": ["./src/utils/*"]
    },
    "typeRoots": ["./src/types", "./node_modules/@types"],
  },
  "ts-node": { "esm": true,   },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}